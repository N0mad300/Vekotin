<ui:FluentWindow x:Class="Vekotin.ControlPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:Vekotin"
        mc:Ignorable="d"
        Title="Vekotin" 
        Height="600" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica">
    
    <ui:FluentWindow.Resources>
        <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
    </ui:FluentWindow.Resources>

    <Grid Margin="15, 15, 0, 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
    
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <ui:TextBlock Text="Vekotin Control Panel" 
                               FontSize="24" 
                               FontWeight="Bold"/>
            <ui:TextBlock Text="Manage your widgets" 
                               FontSize="12" 
                               Margin="0,5,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="0.7*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.9*"/>
                        <ColumnDefinition Width="0.1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Widget Search TextBox -->
                    <Border Grid.Column="0" 
                            CornerRadius="4"
                            Padding="0,0,15,0">
                        <ui:TextBox x:Name="WidgetSearchBox" PlaceholderText="Search widget..."/>
                    </Border>

                    <!-- Refresh Widget List Button -->
                    <ui:Button Grid.Column="1" 
                               Icon="{ui:SymbolIcon Symbol=ArrowSync20}" 
                               VerticalAlignment="Stretch"
                                Click="RefreshWidgets_Click">
                    </ui:Button>
                </Grid>

                <!-- Widget List -->
                <Border Grid.Row="1" 
                        CornerRadius="4">
                    <Grid>
                        <ListBox x:Name="WidgetListBox"
                                 ItemsSource="{Binding AvailableWidgets}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="5">
                                        <!-- Widget name -->
                                        <ui:TextBlock Text="{Binding Name}" 
                                                      FontWeight="SemiBold"
                                                      FontSize="14"/>
                                        <!-- Widget version -->
                                        <ui:TextBlock Text="{Binding Manifest.Version, StringFormat='Version: {0}'}" 
                                                      FontSize="11"
                                                      Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Empty state -->
                        <ui:TextBlock Text="No widgets found. Add widgets to the 'widgets' folder."
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Foreground="#999"
                                  TextWrapping="Wrap"
                                  TextAlignment="Center"
                                  Margin="20"
                                  Visibility="{Binding AvailableWidgets.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Selected widget controls and informations -->
            <ui:CardControl Grid.Column="1"
                     Margin="15, 0, 0, 0"
                     VerticalContentAlignment="Top"
                     HorizontalContentAlignment="Left"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch">

                <Grid Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type ui:CardControl}}}">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedItem, ElementName=WidgetListBox}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="{Binding SelectedItem.Name, ElementName=WidgetListBox}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="1"
                                   Text="{Binding SelectedItem.Manifest.Version, ElementName=WidgetListBox, StringFormat='Version: {0}'}"/>
                    </Grid>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Widget buttons -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <ui:Button Content="Load Widget" 
                            Appearance="Primary"
                            Click="LoadWidget_Click"
                            MinWidth="100"
                            Margin="0,0,10,0"/>
                            <ui:Button Content="Open Dev Tools"
                            Appearance="Primary"
                            MinWidth="100"
                            Margin="0,0,10,0"/>
                        </StackPanel>

                        <!-- Widget options -->
                        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0, 15, 0, 0">
                            <ui:TextBlock Text="Options"
                                          FontSize="18"
                                          FontWeight="Bold"
                                          Margin="0,0,0,15"/>
                            <StackPanel Orientation="Horizontal">
                                <ui:ToggleSwitch Margin="0, 0, 10, 0"></ui:ToggleSwitch>
                                <ui:TextBlock Text="Draggable"></ui:TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <ui:ToggleSwitch Margin="0, 0, 10, 0"></ui:ToggleSwitch>
                                <ui:TextBlock Text="Click through"></ui:TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <ui:ToggleSwitch Margin="0, 0, 10, 0"></ui:ToggleSwitch>
                                <ui:TextBlock Text="Keep on screen"></ui:TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <ui:ToggleSwitch Margin="0, 0, 10, 0"></ui:ToggleSwitch>
                                <ui:TextBlock Text="Save position"></ui:TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <ui:ToggleSwitch Margin="0, 0, 10, 0"></ui:ToggleSwitch>
                                <ui:TextBlock Text="Snap to edges"></ui:TextBlock>
                            </StackPanel>
                        </StackPanel>
                        
                    </Grid>
                    
                </Grid>
                
            </ui:CardControl>
        </Grid>
    </Grid>
   
</ui:FluentWindow>
